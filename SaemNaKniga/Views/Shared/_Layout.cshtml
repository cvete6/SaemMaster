<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/NavbarClasses.css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
	<div class="navbar navbar-inverse navbar-custom navbar-fixed-top">
		<div class="container" style="padding-left:5px; padding-right:0px;">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Саем на книга", "Index", "Home", new { area = "" }, new { @class = "navbar-title" })
			</div>
			<div id="bg" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-positionize">
                    <li>@Html.ActionLink("За нас", "About", "Home", null, new { @class = "navbar-options" })</li>
                    <li>@Html.ActionLink("Новости", "News", "Home", null, new { @class = "navbar-options" })</li>
                    <li>@Html.ActionLink("Издавачки куќи", "Index", "PublishHouse", null, new { @class = "navbar-options" })</li>
                    <li>@Html.ActionLink("Автори", "Index", "Authors", null, new { @class = "navbar-options" })</li>
                    @Html.Partial("_LoginPartial")
                </ul>
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()


	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
	<br />
	<hr />
	<footer>
		<p class="adjfooter">&copy; @DateTime.Now.Year </p>
	</footer>
</body>
</html>

			